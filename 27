import { User } from "@supabase/supabase-js";

export interface ChatMessage {
  id: string;
  user_id: string;
  content: string;
  role: 'user' | 'assistant';
  created_at: string;
}

export interface Note {
    id: string;
    user_id: string;
    title: string | null;
    content: string;
    created_at: string;
    updated_at: string;
}

export interface Reminder {
    id: string;
    user_id: string;
    content: string;
    remind_at: string;
    is_completed: boolean;
    created_at: string;
}

export interface UserProfile {
    id: string;
    display_name: string | null;
    language: 'English' | 'Hindi' | 'French' | null;
}

export interface MediaFile {
    id: string;
    name: string;
    url: string;
    file_path: string;
    mime_type: string;
    created_at: string;
}
