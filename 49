import { motion } from 'framer-motion';
import { Wand2, Loader2, CheckCircle } from 'lucide-react';
import { useState } from 'react';
import { Button } from '../components/ui/Button';
import { Textarea } from '../components/ui/Textarea';

const AIPageBuilder = () => {
    const [prompt, setPrompt] = useState('');
    const [isLoading, setIsLoading] = useState(false);
    const [isComplete, setIsComplete] = useState(false);

    const handleBuild = () => {
        if (!prompt) return;
        setIsLoading(true);
        setIsComplete(false);
        // Simulate build process
        setTimeout(() => {
            setIsLoading(false);
            setIsComplete(true);
        }, 3000);
    };

    return (
        <motion.div
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            className="p-8 w-full h-full flex flex-col"
        >
            <div className="flex items-center space-x-4 mb-8">
                <Wand2 className="w-8 h-8 text-primary" />
                <h2 className="text-3xl font-bold text-text-main">AI Builder</h2>
            </div>

            <div className="max-w-3xl mx-auto w-full flex-1 flex flex-col">
                <p className="text-text-secondary mb-6 text-center">
                    Describe the application, website, or game you want to build. Be as detailed as possible.
                </p>
                <div className="glass-pane p-6 flex-1 flex flex-col">
                    <Textarea 
                        placeholder="e.g., 'Create a modern landing page for a SaaS company that sells productivity software. It needs a hero section with a call-to-action, a features section with three columns, a pricing table, and a contact form...'"
                        className="flex-1 bg-transparent border-0 focus:ring-0 p-0 resize-none"
                        value={prompt}
                        onChange={(e) => setPrompt(e.target.value)}
                    />
                    <div className="mt-6 flex justify-end">
                        <Button onClick={handleBuild} loading={isLoading} disabled={!prompt || isLoading}>
                            {isLoading ? 'Building...' : 'Build with Luma'}
                        </Button>
                    </div>
                </div>

                {isComplete && (
                    <motion.div 
                        initial={{ opacity: 0, y: 20 }}
                        animate={{ opacity: 1, y: 0 }}
                        className="mt-8 text-center"
                    >
                        <CheckCircle className="w-12 h-12 text-green-500 mx-auto mb-4" />
                        <h3 className="text-xl font-semibold text-text-main">Build Simulation Complete!</h3>
                        <p className="text-text-secondary">Your project is ready for the next step.</p>
                    </motion.div>
                )}
            </div>
        </motion.div>
    );
};

export default AIPageBuilder;
